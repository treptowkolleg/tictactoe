{% extends 'fullpage.html.twig' %}

{% block title %}TicTacToe{% endblock %}

{% block body %}
<section>
	<article>
		<div class="grid">
			<div>
    			<h3 style="text-align: center">Spielfeld</h3>
            	{% for row in 'A'..'C' %}
        			<div class="grid">
        				{% for column in 1..3 %}
        				    {% set field = (row ~ column) %}
    						{% if field in filled_fields|keys %}        						    
    							<div class="cell"><i class="bi bi-{{ filled_fields[field] }}" style="font-size:2em"></i></div>	        						
    					        {% else %}
    								<a class="cell" href="{{ play }}&field={{ field }}"><i class="bi bi-plus-circle-dotted" style="font-size:2em"></i></a>        						
    					    {% endif %}
        				{% endfor %}
        			</div>
        		{% endfor %}
    		</div>
			<div>
				<div class="flex-container">
					<div style="text-align:center">
    					<h3>An der Reihe</h3>
    					<i class="bi bi-{{ current_player }}" style="font-size:4em"></i>
					</div>					
				</div>
			</div>
		</div>
	</article>
	<a href="{{ reset }}">Spiel neustarten</a>		
</section>
<section>
	<h2>Session</h2>
	<pre>
		<code>{{ dump(session) }}</code>
	</pre>
</section>
{% endblock %}